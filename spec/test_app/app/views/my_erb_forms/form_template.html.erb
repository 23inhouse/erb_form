<%= form_for(@my_erb_form, :html => { :class => 'template' }) do |f| %>
  <fieldset>
    <%= f.text_field :text_field, :template => {:hint => 'Hint me text_field.', :label => "My <b>custom</b> label"} %>
    <%= f.text_area :text_area, :template => {:hint => 'Hint me text_area.'} %>
    <%= f.check_box :check_box, :template => {:hint => 'Hint me check_box.'} %>
    <%= f.radio_button :radio_button, [:cool], :template => {:hint => 'Hint me radio_button.'} %>
    <%= f.date_select :date_select, {:start_year => Time.now.year, :end_year => Time.now.year + 1, :discard_month => true, :discourd_day => true, :template => {:hint => 'Hint me date_select.'}} %>
    <%= f.select :select, ['nome'], :template => {:hint => 'Hint me select.'} %>
  </fieldset>
<% end %>
